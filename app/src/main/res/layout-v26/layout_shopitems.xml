<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/parent_layout">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="19sp"
        android:layout_toEndOf="@id/image"
        android:text="@string/basic_sword"
        android:layout_toRightOf="@id/image"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/item_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_name"
        android:layout_below="@id/item_name"
        android:paddingVertical="10dp"
        android:text="@string/damage_1"
        android:layout_alignLeft="@id/item_name" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/gold"
        app:srcCompat="@drawable/gold"
        android:layout_centerVertical="true"
        android:layout_marginStart="250dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/item_price"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/gold"
        android:layout_marginLeft="5dp"
        />



</RelativeLayout>